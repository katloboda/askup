<div class="prettyform">
  <div class="container" id="signin">
    <div class="box maxwidth-box">
      <h2 class="fixed-title center">Sign In</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'center'}) do |f| %>
      
        <div class="center">
        <%= f.email_field :email, autofocus: true, class: "center-form form-control", placeholder: "Email" %></div>
   
        <div class="center">
          <%= f.password_field :password, autocomplete: "off", class: "center-form form-control", placeholder: "Password" %>
        </div>
      
        <div class= "center">
          <%= f.submit "Sign in", class: 'btn btn-theme' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-theme' %>
        </div>

        <div class= "center user-link">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        </div>
      <% end %>

    </div>
  </div>
</div>
